<h3>All users</h3>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to user.username, user_path(user), class: "text-success" %>
              <%= link_to gravatar_for(user, { size: 150 }), user %>
            </h4>
            <p class="card-text"><%= pluralize(user.articles.count, 'article') %></p>
            <%= link_to "View", user_path(user), class: "btn btn-outline-info" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-primary" %>
          </div>
          <div class="card-footer text-muted">
            Joined <%= time_ago_in_words(user.created_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
